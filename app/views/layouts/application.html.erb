<!DOCTYPE html>
<html>
  <head>
    <title>Sum17Twitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="container">
      <div class="pull-right">

        <% if user_signed_in? %>
          Welcome @<%= current_user.username %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-sm btn-primary navbar-btn" %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-danger navbar-btn" %>
            

        <% end %>
      </div>
  </div>		

	  <div class="container">
	    <%= yield %>
	  </div> 
  </body>
</html>
